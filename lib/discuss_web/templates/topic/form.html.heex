<.form let={f} for={@changeset} action={@action}>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :title %>
  <%= text_input f, :title, placeholder: "Type the topic title", class: "form-control" %>
  <%= error_tag f, :title %>

  <%= submit "Save topic", class: "waves-effect waves-light btn" %>
</.form>
